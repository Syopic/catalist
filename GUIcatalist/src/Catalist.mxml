<?xml version="1.0" encoding="utf-8"?>
<mx:Application xmlns:mx="http://www.adobe.com/2006/mxml" layout="absolute"
    backgroundColor="#cccccc">

    <mx:Style source="/../assets/styles/main.css" />
    <mx:XML id="menuBarXml" source="/../assets/navigation/barMenu.xml" format="e4x"/>

    <mx:Script>
        <![CDATA[
            import ua.com.syo.catalist.views.data.CatalistStrings;
        ]]>
    </mx:Script>

    <mx:VBox width="100%" height="100%" verticalGap="0">
        <mx:ApplicationControlBar height="50" width="100%" >
            <mx:Image source="@Embed('/../assets/images/logo.png')"  width="150" height="40"/>

            <mx:Spacer width="100%" height="40"/>

            <mx:Label id="titleLabel" text="{CatalistStrings.TITLE_LABEL}" fontWeight="bold"/>
            <mx:VRule height="50%"/>
            <mx:Label id="versionLabel" text="{CatalistStrings.VERSION}" fontWeight="bold"/>
        </mx:ApplicationControlBar>
        <mx:Spacer width="100%" height="3" />
        <mx:MenuBar dataProvider="{menuBarXml.item}" labelField="@label" width="100%"></mx:MenuBar>

        <mx:ApplicationControlBar height="40" width="100%" >
            <mx:ComboBox></mx:ComboBox>
        </mx:ApplicationControlBar>

        <mx:HBox width="100%" height="100%">
        </mx:HBox>

        <mx:ApplicationControlBar height="40" width="100%" >
            <mx:Image source="@Embed('/../assets/images/icons/page_white_gear.png')" />
            <mx:Label id="statusLabel" text="Status Label" width="100%"/>
        </mx:ApplicationControlBar>
    </mx:VBox>


</mx:Application>
